    <h1>ðŸ”‘ Royal License Key Generator</h1>
    <p>Select the date when the license should EXPIRE:</p>
    
    <label>Expiry Date:</label><br>
    <input type="date" id="dateInput"><br>
    <button onclick="genKey()">Generate Secure Key</button>
    
    <div id="output">...</div>

    <script>
        function genKey() {
            var date = document.getElementById('dateInput').value;
            if(!date) { alert("Please pick an expiry date!"); return; }
            
            // This format MUST match the main software code
            var rawString = "ROYAL_EXP_" + date; 
            
            // Encode to Base64
            var encodedKey = btoa(rawString); 
            
            document.getElementById('output').innerText = encodedKey;
        }
    </script>
