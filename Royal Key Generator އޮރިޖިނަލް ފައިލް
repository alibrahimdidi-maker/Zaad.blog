<body>
    <div class="box">
        <h2>üîê Royal License Generator</h2>
        <p>Select Expiry Date & Time (Valid Until):</p>
        <input type="datetime-local" id="expDate">
        <br>
        <button onclick="genKey()">GENERATE KEY</button>
        <br>
        <p>Copy this Code:</p>
        <textarea id="output" placeholder="Key will appear here..."></textarea>
    </div>

    <script>
        function genKey() {
            const dateStr = document.getElementById('expDate').value;
            if(!dateStr) { alert("Please select a date!"); return; }
            
            // 1. Get Timestamp
            const expiry = new Date(dateStr).getTime();
            
            // 2. Secret Salt (Must match the Main System code exactly)
            const salt = "ROYAL_V5_SECURE"; 
            
            // 3. Create JSON Payload
            const payload = JSON.stringify({ e: expiry, s: salt });
            
            // 4. Encode: Base64 -> Reverse String (To look like a complex key)
            const key = btoa(payload).split('').reverse().join('');
            
            document.getElementById('output').value = key;
        }
    </script>
