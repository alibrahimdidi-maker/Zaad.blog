    <script>
        // --- 1. INITIALIZATION ---
        window.onload = function() {
            const container = document.getElementById('cardContainer');
            if(container.children.length === 0) {
                generateDummyData();
            }
        };

        function generateDummyData() {
            const grid = document.getElementById('cardContainer');
            for(let i=1; i<=200; i++) {
                const id = 'card-gen-' + i;
                const userCode = 'CUS-' + String(i).padStart(4, '0'); 
                const passCode = '1234'; 
                const title = `ﬁÜﬁ¶ﬁêﬁ∞ﬁìﬁ¶ﬁâﬁ¶ﬁÉ ${String(i).padStart(4, '0')}`;
                
                const div = document.createElement('div');
                div.className = 'card';
                div.id = id;
                
                // Creates card with default wifi pass
                div.innerHTML = getCardHTML(id, userCode, passCode, title, "ﬁåﬁ®ﬁÉﬁ©ﬁéﬁ¶ﬁáﬁ®ﬁàﬁß ﬁÑﬁ¶ﬁìﬁ¶ﬁÇﬁ¶ﬁÅﬁ∞ ﬁäﬁ®ﬁáﬁ∞ﬁåﬁ¶ﬁàﬁßﬁçﬁ¨ﬁáﬁ∞ﬁàﬁ™ﬁâﬁ¶ﬁÅﬁ∞ﬁäﬁ¶ﬁÄﬁ™ ﬁçﬁÆﬁéﬁ®ﬁÇﬁ∞ ﬁÜﬁ™ﬁÉﬁ¶ﬁáﬁ∞ﬁàﬁß!", "WIFI-PASS-12345");
                grid.appendChild(div);
            }
        }

        // --- 2. SECURITY ---
        document.addEventListener('contextmenu', event => event.preventDefault());
        document.onkeydown = function(e) { if(event.keyCode == 123) return false; }

        // --- 3. COPY FUNCTION ---
        function copyText(elementId, btnId) {
            const textElement = document.getElementById(elementId);
            const textToCopy = textElement.innerText;
            const btn = document.getElementById(btnId);

            const tempInput = document.createElement("textarea");
            tempInput.value = textToCopy;
            document.body.appendChild(tempInput);
            tempInput.select();
            document.execCommand("copy");
            document.body.removeChild(tempInput);

            const originalHTML = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-check"></i> Copied!';
            btn.style.background = "#27ae60"; 
            btn.style.color = "white";
            
            setTimeout(() => {
                btn.innerHTML = originalHTML;
                btn.style.background = "#ffca28";
                btn.style.color = "#333";
            }, 2000);
        }

        // --- 4. SEARCH ---
        function filterCards() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toUpperCase();
            const grid = document.getElementById('cardContainer');
            const cards = grid.getElementsByClassName('card');

            for (let i = 0; i < cards.length; i++) {
                const badge = cards[i].querySelector('.type-tag');
                const title = cards[i].querySelector('.card-title');
                if ((badge && badge.innerText.toUpperCase().indexOf(filter) > -1) || 
                    (title && title.innerText.toUpperCase().indexOf(filter) > -1)) {
                    cards[i].style.display = "";
                } else {
                    cards[i].style.display = "none";
                }
            }
        }

        // --- 5. LOGIN LOGIC ---
        let targetCardId = null;

        function openLogin(cardId) {
            targetCardId = cardId;
            document.getElementById('loginModal').style.display = 'flex';
            document.getElementById('modalUser').value = '';
            document.getElementById('modalPass').value = '';
            document.getElementById('errMsg').style.display = 'none';
        }

        function verifyLogin() {
            const u = document.getElementById('modalUser').value;
            const p = document.getElementById('modalPass').value;
            const correctU = document.getElementById('user-' + targetCardId).value;
            const correctP = document.getElementById('pass-' + targetCardId).value;

            if(u === correctU && p === correctP) {
                document.getElementById('lock-div-' + targetCardId).style.display = 'none';
                document.getElementById('links-div-' + targetCardId).style.display = 'block';
                
                // Refresh links
                for(let i=1; i<=4; i++) {
                    let url = document.getElementById(`url${i}-${targetCardId}`).value;
                    let btn = document.getElementById(`btn${i}-${targetCardId}`);
                    if(url && url !== '#' && url !== '') {
                        btn.href = url;
                        btn.style.display = 'block';
                    } else {
                        btn.style.display = 'none';
                    }
                }
                document.getElementById('loginModal').style.display = 'none';
            } else {
                document.getElementById('errMsg').style.display = 'block';
            }
        }

        window.onclick = function(e) {
            if(e.target == document.getElementById('loginModal')) document.getElementById('loginModal').style.display = 'none';
        }

        // --- 6. ADMIN LOGIC ---
        function enableAdmin() {
            if(document.body.classList.contains('admin-mode')) return;
            const pass = prompt("Enter Admin Password:");
            if(pass === "admin123") {
                document.body.classList.add('admin-mode');
                // Make editable areas active
                document.querySelectorAll('.card-title, .card-desc').forEach(el => {
                    el.setAttribute('contenteditable', 'true');
                });
                alert("Admin Mode Active!");
            } else {
                alert("Invalid Password!");
            }
        }

        // --- UPDATE FUNCTIONS ---
        function updateValue(id, val) { 
            document.getElementById(id).value = val; 
            if(id.startsWith('user-')) {
                const cardId = id.replace('user-', '');
                const badge = document.querySelector(`#${cardId} .type-tag`);
                if(badge) badge.innerText = val;
            }
        }
        
        // ** NEW ** Function to update the yellow code box from admin input
        function updateEventCode(cardId, val) {
             const display = document.getElementById(`code-${cardId}`);
             if(display) {
                 display.innerText = val;
             }
        }

        function updateLinkName(cardId, num, val) {
            document.getElementById(`name${num}-${cardId}`).value = val;
            document.getElementById(`lbl${num}-${cardId}`).innerText = val;
        }

        function updateLinkURL(cardId, num, val) {
            document.getElementById(`url${num}-${cardId}`).value = val;
            document.getElementById(`btn${num}-${cardId}`).href = val;
        }

        // HTML Generator
        function getCardHTML(id, user, pass, title, desc, eventCode) {
            return `
                <div class="card-img-area">
                    <i class="fas fa-user-circle"></i>
                    <span class="type-tag">${user}</span>
                </div>
                <div class="card-body">
                    <div class="card-title" contenteditable="${document.body.classList.contains('admin-mode')}">${title}</div>
                    <div class="card-desc" contenteditable="${document.body.classList.contains('admin-mode')}">${desc}</div>
                    
                    <div class="lock-container" id="lock-div-${id}">
                        <button class="lock-btn" onclick="openLogin('${id}')"><i class="fas fa-lock"></i> Login to View</button>
                    </div>

                    <div class="unlocked-links" id="links-div-${id}">
                        
                        <div class="special-code-box">
                            <span class="code-label">Event Code / Password:</span>
                            <div class="code-display" id="code-${id}">${eventCode}</div>
                            <button class="copy-btn" id="btn-copy-${id}" onclick="copyText('code-${id}', 'btn-copy-${id}')">
                                <i class="fas fa-copy"></i> COPY CODE
                            </button>
                        </div>

                        <a href="#" target="_blank" class="resource-link-btn" id="btn1-${id}"><span id="lbl1-${id}">Link 1</span> <i class="fas fa-link"></i></a>
                        <a href="#" target="_blank" class="resource-link-btn" id="btn2-${id}"><span id="lbl2-${id}">Link 2</span> <i class="fas fa-link"></i></a>
                        <a href="#" target="_blank" class="resource-link-btn" id="btn3-${id}"><span id="lbl3-${id}">Link 3</span> <i class="fas fa-link"></i></a>
                        <a href="#" target="_blank" class="resource-link-btn" id="btn4-${id}"><span id="lbl4-${id}">Link 4</span> <i class="fas fa-link"></i></a>
                    </div>
                    
                    <input type="hidden" id="user-${id}" value="${user}"> 
                    <input type="hidden" id="pass-${id}" value="${pass}">
                    ${generateHiddenInputs(id)}
                    
                    <div class="admin-controls">
                        <div class="admin-group">
                            <label style="font-weight:bold; color:red;">Login Credentials:</label>
                            <input type="text" class="admin-input" onchange="updateValue('user-${id}', this.value)" value="${user}" placeholder="Username">
                            <input type="text" class="admin-input" onchange="updateValue('pass-${id}', this.value)" value="${pass}" placeholder="Password">
                        </div>
                        
                        <div class="admin-group">
                             <label style="font-weight:bold; color:#e67e22;">Code to Show Customer:</label>
                             <input type="text" class="admin-input admin-code-input" onkeyup="updateEventCode('${id}', this.value)" value="${eventCode}" placeholder="Type new code here...">
                        </div>

                        ${generateAdminInputs(id)}
                    </div>
                </div>
            `;
        }

        function generateHiddenInputs(id) {
            let html = '';
            for(let i=1; i<=4; i++) html += `<input type="hidden" id="url${i}-${id}" value="#"> <input type="hidden" id="name${i}-${id}" value="Link ${i}">`;
            return html;
        }

        function generateAdminInputs(id) {
            let html = '';
            for(let i=1; i<=4; i++) {
                html += `<div style="margin-top:5px; border-bottom:1px solid #eee; padding-bottom:5px;">
                            <input type="text" class="admin-input" onchange="updateLinkName('${id}', ${i}, this.value)" value="Link ${i}" placeholder="Link Name">
                            <input type="text" class="admin-input" onchange="updateLinkURL('${id}', ${i}, this.value)" value="#" placeholder="Paste URL here">
                         </div>`;
            }
            return html;
        }

        function downloadPage() {
            const clone = document.documentElement.cloneNode(true);
            clone.querySelector('body').classList.remove('admin-mode');
            clone.querySelectorAll('[contenteditable]').forEach(el => el.setAttribute('contenteditable', 'false'));
            
            // Persist input values (Crucial for saving the new password)
            const inputs = document.querySelectorAll('input');
            const cloneInputs = clone.querySelectorAll('input');
            inputs.forEach((inp, i) => { if(cloneInputs[i]) cloneInputs[i].setAttribute('value', inp.value); });
            
            // Reset visibility
            clone.querySelectorAll('.lock-container').forEach(el => el.style.display = 'block');
            clone.querySelectorAll('.unlocked-links').forEach(el => el.style.display = 'none');
            
            // Remove search filter
            const cards = clone.getElementsByClassName('card');
            for(let i=0; i<cards.length; i++) cards[i].style.display = "";

            const htmlContent = "<!DOCTYPE html>\n" + clone.outerHTML;
            const blob = new Blob([htmlContent], { type: "text/html" });
            const link = document.createElement("a");
            const fileName = `event_portal_${new Date().toISOString().slice(0,10)}.html`;
            link.href = URL.createObjectURL(blob);
            link.download = fileName;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            alert("New File Downloaded!");
        }
    </script>
</body>
</html>
