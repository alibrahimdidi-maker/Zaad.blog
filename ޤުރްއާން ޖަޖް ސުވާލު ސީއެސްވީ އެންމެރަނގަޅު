    <style>
        body { font-family: "Faruuma", "Segoe UI", Tahoma, sans-serif; text-align: center; padding: 50px; background: #f9f9f9; color: #333; }
        h1 { color: #006400; }
        .container { background: white; padding: 40px; border-radius: 10px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); max-width: 600px; margin: 0 auto; }
        #btn { padding: 15px 30px; font-size: 18px; background: #006400; color: white; border: none; border-radius: 5px; cursor: pointer; transition: 0.3s; }
        #btn:hover { background: #004d00; }
        #btn:disabled { background: #ccc; cursor: not-allowed; }
        #status { margin-top: 20px; font-weight: bold; direction: ltr; font-size: 14px; }
        .progress { width: 100%; background-color: #e0e0e0; margin-top: 20px; height: 25px; border-radius: 15px; overflow: hidden; }
        .bar { width: 0%; height: 100%; background-color: #28a745; text-align: center; line-height: 25px; color: white; font-size: 12px; transition: width 0.2s; }
        .info-box { background: #e3f2fd; border: 1px solid #bbdefb; color: #0d47a1; padding: 10px; margin-bottom: 20px; border-radius: 5px; font-size: 14px; text-align: right; direction: rtl; }
    </style>
